@model SCB_TKMIDIA.Models.TB_FILME

<h3>Exclusão</h3>

<h3>Tem certeza que deseja excluir este Filme?</h3>
<div>
    <dl class="dl-horizontal">
        <dt hidden="hidden">
            @Html.DisplayNameFor(model => model.FIL_CD_ANCINE)
        </dt>

        <dd hidden="hidden">
            @Html.DisplayFor(model => model.FIL_CD_ANCINE)
        </dd>
        <dt>
            Nome do Filme
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIL_NM)
        </dd>
        <dt>
            Nac / Estr
        </dt>
        <dd>
            @{
                var nac = ViewBag.Nac;
                if (nac == "E")
                { nac = "Estrangeiro"; }
                else
                { nac = "Nacional"; }

            }
            @nac
        </dd>
        <dt>
            Distribuidora
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TB_DISTRIBUIDORA.DIS_NM)
        </dd>
        <dt>
            Inclusão
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIL_DT_INC)
        </dd>

        <dt>
            Alteração
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIL_DT_ALT)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:right">
            <a href="/FILME" class="btn btn-default btn-md" role="button">Voltar</a>
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
    }
</div>
